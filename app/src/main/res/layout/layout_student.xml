<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="20dp"
    android:scaleType="fitXY">

    <TextView
        android:id="@+id/Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginLeft="12dp"
        android:layout_toEndOf="@id/imgProfile"
        android:layout_toRightOf="@id/imgProfile"
        android:hint="Student Name"
        android:textSize="20sp"
        android:scaleType="fitXY"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imgProfile"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/blankimg" />

    <TextView
        android:id="@+id/Age"
        android:layout_width="wrap_content"
        android:layout_height="44dp"
        android:layout_below="@+id/Name"
        android:layout_marginStart="13dp"
        android:layout_marginLeft="13dp"
        android:layout_marginTop="1dp"
        android:layout_toEndOf="@id/imgProfile"
        android:layout_toRightOf="@id/imgProfile"
        android:hint="Age"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/Address"
        android:layout_width="112dp"
        android:layout_height="38dp"
        android:layout_alignEnd="@+id/imgProfile"
        android:layout_alignRight="@+id/imgProfile"
        android:layout_alignBottom="@+id/Age"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="113dp"
        android:layout_marginLeft="113dp"
        android:layout_marginEnd="-125dp"
        android:layout_marginRight="-125dp"
        android:layout_marginBottom="-31dp"
        android:text="Address"
        android:textSize="20sp" />

    <ImageView
        android:id="@+id/delete"
        android:layout_width="41dp"
        android:layout_height="51dp"

        android:layout_above="@+id/address"
        android:layout_alignEnd="@+id/Age"
        android:layout_alignRight="@+id/Age"
        android:layout_marginEnd="-195dp"
        android:layout_marginRight="-195dp"
        android:layout_marginBottom="-28dp"
        app:srcCompat="@drawable/delete" />

    <TextView
        android:id="@+id/Sex"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/Address"
        android:layout_alignRight="@+id/Address"
        android:layout_alignBottom="@+id/Address"
        android:layout_marginEnd="-133dp"
        android:layout_marginRight="-133dp"
        android:layout_marginBottom="14dp"
        android:text="Gender" />


</RelativeLayout>